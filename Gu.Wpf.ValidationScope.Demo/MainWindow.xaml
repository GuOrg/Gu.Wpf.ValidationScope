<Window x:Class="Gu.Wpf.ValidationScope.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Gu.Wpf.ValidationScope.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Scope(1)">
            <local:OneLevelScopeView />
        </TabItem>

        <TabItem Header="Scope(2)">
            <local:TwoLevelScopeView />
        </TabItem>

        <TabItem Header="Scope(DataTemplates)">
            <local:ScopeWithDataTemplatesView />
        </TabItem>

        <TabItem Header="Scope(ControlTemplate)">
            <local:ScopeWithControlTemplates />
        </TabItem>
        
        <TabItem Header="Complicated">
            <local:ComplicatedScopeView />
        </TabItem>

        <TabItem Header="Dynamic">
            <local:DynamicTypesView />
        </TabItem>
    </TabControl>
</Window>
